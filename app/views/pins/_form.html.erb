<%= simple_form_for(@pin, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

  <%= f.input :image, label: "Upload an Image" %>

<%= f.input :title %>
    <%= f.input :description, as: :text, input_html: { rows: "3"} %>
    <div class="well">
    <%= f.input :needshacker, as: :boolean, label: "Need a Hacker" %>
    <%= f.input :needshussler, as: :boolean, label: "Need a Hussler" %>
    <%= f.input :needsdesigner, as: :boolean, label: "Need a Designer" %>
</div>


  <div class="form-actions">
  	
    <%= f.button :submit, "Go!", class: "btn btn-primary" %>
  </div>
<% end %>
